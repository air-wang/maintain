<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', target: @user %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "注册", class: "btn btn-primary" %>
<% end %>
